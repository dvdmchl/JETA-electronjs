{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["title", "language"],
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "version": { "type": "string" },
        "language": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "locations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "descriptions", "connections"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "name_accusative": { "type": "string" },
          "descriptions": { "type": "array" },
          "connections": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["direction", "target"],
              "properties": {
                "direction": { "type": "string" },
                "target": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "descriptions"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "name_accusative": { "type": "string" },
          "descriptions": { "type": "array" },
          "location": { "type": "string" }
        }
      }
    },
    "quests": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "steps", "reward"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["step", "description", "condition"],
              "properties": {
                "step": { "type": "integer" },
                "description": { "type": "string" },
                "condition": { "type": "string" }
              }
            }
          },
          "reward": { "type": "object" }
        }
      }
    },
    "characters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "name_accusative": { "type": "string" },
          "description": { "type": "string" },
          "location": { "type": "string" },
          "onTalk": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["description"],
              "properties": {
                "id": { "type": "string" },
                "description": { "type": "string" },
                "condition": { "type": "string" },
                "set": { "type": "string" },
                "responses": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id", "text"],
                    "properties": {
                      "id": { "type": "string" },
                      "text": { "type": "string" },
                      "condition": { "type": "string" },
                      "set": { "type": "string" },
                      "next": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
